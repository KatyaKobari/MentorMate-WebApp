}

<style>
    .hero {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        padding: 4rem 0;
    }

    .info-card, .team-card {
        border-radius: 14px;
        transition: 0.3s ease;
        border: 1px solid #e9ecef;
    }

    .info-card:hover, .team-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .avatar {
        width: 70px;
        height: 70px;
        line-height: 70px;
        border-radius: 50%;
        font-size: 24px;
        font-weight: bold;
        margin: 0 auto;
    }

    .section-title {
        color: #333;
        font-weight: 700;
    }

    .text-primary {
        color: #2196f3 !important;
    }

    .text-info {
        color: #17a2b8 !important;
    }

    .text-secondary {
        color: #6c757d !important;
    }
</style>

