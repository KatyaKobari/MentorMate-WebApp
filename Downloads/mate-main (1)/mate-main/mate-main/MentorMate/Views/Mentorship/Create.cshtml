@model MentorMate.ViewModels.MentorshipRequestViewModel

<h2>Send Mentorship Request</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MentorId">Mentor ID</label>
        <input asp-for="MentorId" class="form-control" />
        <span asp-validation-for="MentorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Request</button>
</form>
